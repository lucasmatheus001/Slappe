<div class="card" style="">
  <div class="card-body">
    <%= form_with model: post do |form| %>
      
      <div class="col-6">
          <div class="form-group">
            <% form.label :user_id %>
            <%= form.hidden_field :user_id, value: current_user.id %>
            <% post.errors.full_messages_for(:user_id).each do |message| %>
                <div><%= message %></div>
            <% end %>
          </div>
      </div>

      <div class="form-group">
        <%= form.text_area :content, class: "form-control", rows: 6, placeholder: "What's happening?" %>
        <% post.errors.full_messages_for(:content).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>

      <div class="form-group">
        <%= form.label :images %>
        <%= form.file_field :images, multiple: true, class: "form-control" %>
        <% post.errors.full_messages_for(:description).each do |message| %>
                <div><%= message %></div>
            <% end %>
      </div>
      
      <%= form.submit %>
    <% end %>
  </div>
</div>
