<h1>Resultados da busca</h1>

<% if @users.any? %>
  <ul class="list-group">
    <% @users.each do |user| %>
      <div class="my-3 p-3 bg-body rounded shadow-sm">
        <div class="d-flex text-body-secondary pt-3">
          <div class="d-flex text-body-secondary justify-content-between w-100">
            <a href="/users/<%="#{user.id}"%>" class="d-block link-body-emphasis text-decoration-none bd-placeholder-img flex-shrink-0 me-2" aria-expanded="false">
              <%= image_tag(
                user.avatar.attached? ? url_for(user.avatar) : "https://github.com/mdo.png",
                alt: "Foto de perfil",
                width: 40,
                height: 40,
                class: "rounded-circle"
              ) %>
            </a>
            <div class="d-flex justify-content-between w-100">
              <p class="pb-3 mb-0 small lh-sm ">
                <strong class="d-block text-gray-dark"> 
                  <%= link_to user.name, user_path(user) %>
                </strong>
              </p>             
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <%= paginate @users %>
  </ul>
<% else %>
  <p>Nenhum usu√°rio encontrado.</p>
<% end %>
