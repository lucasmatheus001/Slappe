<h1><%= @user.name %></h1>

<p>Email: <%= @user.email %></p>
<p>Seguidores: <%= @user.followers.count %></p>
<p>Seguindo: <%= @user.following.count %></p>

<%= render 'follow_button', user: @user %>
<% if !@user.nil?%>
  <%= link_to "Ver Seguidores", user_followers_user_path(@user) %> |
  <%= link_to "Ver Seguindo", user_following_user_path(@user) %>
<% end %>
